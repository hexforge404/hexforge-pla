[Unit]
Description=HexForge Brain Receiver (Flask)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=pla
WorkingDirectory=/home/pla/hexforge-pla/software/brain_receiver
ExecStart=/home/pla/hexforge-pla/software/brain_receiver/.venv/bin/python /home/pla/hexforge-pla/software/brain_receiver/app.py
Restart=always
RestartSec=2
Environment=BRAIN_RECEIVER_PORT=8788

[Install]
WantedBy=multi-user.target
